<?xml version="1.0" encoding="utf-8"?>
<!-- 每个动作对应一个action，有以下属性
	name：动作名称
	angle:图像角度
	color：色差
	alpha:透明度
	frame:真序列，包含
		{
			uri:图像地址
			w:宽
			h:高
			ox：横向偏移
			oy: 纵向偏移
			dur: 持续时间
			event: 抛出去的事件
		}
-->
<root>
	<action>
		<name>idle</name>
		<angle>0</angle>
		<color>-1</color>
		<alpha>1</alpha>
		<frame>
			<uri>1.png</uri>
			<w>1</w>
			<h>2</h>
			<ox>3</ox>
			<oy>4</oy>
			<dur>0.5</dur>
			<event>6</event>
		</frame>
		<frame>
			<uri>2.png</uri>
			<w>7</w>
			<h>8</h>
			<ox>9</ox>
			<oy>10</oy>
			<dur>0.5</dur>
			<event>12</event>
		</frame>
	</action>
	<action>
		<name>walk</name>
		<angle>0</angle>
